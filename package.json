{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "compile": "lerna run compile",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "core": "node ./scripts/add-core.js",
    "start": "node ./scripts/start-web.js",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "check-packages": "yarn clean && yarn compile && yarn test && yarn lint",
    "publish-packages": "./scripts/publish",
    "bootstrap": "yarn install --ignore-engines && yarn lerna bootstrap",
    "regenerate": "lerna clean --yes && rm -rf ./node_modules && yarn run bootstrap",
    "regenerate:win": "lerna clean --yes && rd /q /s node_modules && yarn run bootstrap"
  },
  "devDependencies": {
    "lerna": "3.1.4",
    "minimist": "^1.2.0"
  }
}
